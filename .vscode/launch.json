  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "Debug (Launch) App",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "stopOnEntry": false,
      "mainClass": "com.mycompany.app.App",
      "args": "-classpath ${workspaceRoot}/target/classes",
      "projectName": "my-app"
    },
    {
      "type": "java",
      "name": "Debug (Attach)",
      "request": "attach",
      "hostName": "localhost",
      "port": 8585
    }
  ]
}